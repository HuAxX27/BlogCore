@model BlogCore.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Pagina de inicio";
}

<div class="row mt-1">
    <div class="col-sm-12">
        <h1 class="text-center text-white bg-secondary py-1"> Ultimos Articulos.</h1>
    </div>
</div>

@if (Model.Articles.Count() > 0)
{
    <hr />
    <div class="row">
        @foreach (var article in Model.Articles.OrderBy(o => o.Id))
        {
            <div class="col-4">
                <div class="card">
                    <img src="@article.UrlImage" class="img-thumbnail" width="100%" />
                    <div class="card-body">
                        <h5 class="text-center">@article.Name</h5>
                        <a asp-action="Details" class="btn btn-success" style="border-radius; 10px" asp-route-id="@article.Id">
                            Mas informacion
                        </a>
                    </div>
                </div>
            </div >
        }
    </div>
}
else
{
    
}
